# =============================================================================
# Ultrathink Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
TIMEZONE=Australia/Brisbane
PUID=1000
PGID=1000

# -----------------------------------------------------------------------------
# Domain Configuration
# Point these DNS records to your Oracle Cloud VM's public IP
# -----------------------------------------------------------------------------
N8N_DOMAIN=n8n.yourdomain.com
OBSIDIAN_DOMAIN=obsidian.yourdomain.com
COUCHDB_DOMAIN=couchdb.yourdomain.com

# -----------------------------------------------------------------------------
# CouchDB Credentials
# Used by Obsidian LiveSync plugin to authenticate
# -----------------------------------------------------------------------------
COUCHDB_USER=admin
COUCHDB_PASSWORD=CHANGE_ME_secure_password_123

# -----------------------------------------------------------------------------
# n8n Credentials
# Basic auth for the n8n web interface
# -----------------------------------------------------------------------------
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_another_secure_password

# -----------------------------------------------------------------------------
# Anthropic (Claude) API
# Get your key from: https://console.anthropic.com/
# Used for note classification and morning summaries
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# 1. Message @BotFather on Telegram to create a bot
# 2. Get your chat ID by messaging @userinfobot
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# -----------------------------------------------------------------------------
# Classification Settings
# Confidence threshold for the "Bouncer" - notes below this threshold
# will be flagged for manual review instead of auto-filed
# -----------------------------------------------------------------------------
CONFIDENCE_THRESHOLD=0.6
